<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdasdasdsadasddasdaasdasdasdasdasdasdasdasdasadasdsadsadasdsdasdasdadadasdasdasdadsad"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/iv11"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:src="@color/colorPrimaryDark"
                app:layout_constraintEnd_toStartOf="@id/iv12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv3" />


            <ImageView
                android:id="@+id/iv12"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:src="@color/colorAccent"
                app:layout_constraintEnd_toStartOf="@id/iv13"
                app:layout_constraintStart_toEndOf="@id/iv11"
                app:layout_constraintTop_toTopOf="@id/iv11" />

            <ImageView
                android:id="@+id/iv13"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:src="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv12"
                app:layout_constraintTop_toTopOf="@id/iv11" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:id="@+id/cons4"
            android:paddingBottom="15dp">


            <ImageView
                android:id="@+id/iv21"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@id/iv22"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv22"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@color/colorAccent"
                app:layout_constraintEnd_toStartOf="@id/iv23"
                app:layout_constraintStart_toEndOf="@id/iv21"
                app:layout_constraintTop_toTopOf="@id/iv21" />

            <ImageView
                android:id="@+id/iv23"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv22"
                app:layout_constraintTop_toTopOf="@id/iv21" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">


            <ImageView
                android:id="@+id/iv1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:src="@color/colorPrimaryDark"
                app:layout_constraintEnd_toStartOf="@id/iv2"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:src="@color/colorAccent"
                app:layout_constraintEnd_toStartOf="@id/iv3"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/iv1"
                app:layout_constraintTop_toTopOf="@id/iv1" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:src="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/iv2"
                app:layout_constraintTop_toTopOf="@id/iv1" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />






    </LinearLayout>
</ScrollView>