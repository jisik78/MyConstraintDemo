<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:src="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="adasdasdasdasdasdasdasdasd"
                app:layout_constraintEnd_toEndOf="@id/iv1"
                app:layout_constraintStart_toStartOf="@id/iv1"
                app:layout_constraintTop_toBottomOf="@id/iv1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <!--            app:layout_constrainedWidth="true"  这个属性的使用-->

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:src="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="adasdasdasdasdasdasdasdasd"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="@id/iv2"
                app:layout_constraintStart_toStartOf="@id/iv2"
                app:layout_constraintTop_toBottomOf="@id/iv2" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/iv4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:src="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:background="@color/colorPrimary"
                android:text="text1"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/iv4"
                app:layout_constraintTop_toTopOf="@id/iv4" />

            <TextView
                android:id="@+id/tvtag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="layout_goneMarginStart"
                app:layout_constraintStart_toEndOf="@id/tv4"
                app:layout_constraintTop_toTopOf="@id/tv4"
                app:layout_goneMarginStart="12dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />

        <!--        app:layout_constraintHorizontal_chainStyle="packed"-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv7"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginRight="2dp"
                android:src="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@id/iv8"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv8"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:src="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv7"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />

        <!--        app:layout_constraintHorizontal_chainStyle="spread_inside"-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv9"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginRight="2dp"
                android:src="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@id/iv11"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv11"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:src="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv9"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />

        <!--        app:layout_constraintHorizontal_chainStyle="spread"  默认  -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv13"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginRight="2dp"
                android:src="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@id/iv14"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv14"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:src="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv13"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />


    </LinearLayout>
</ScrollView>